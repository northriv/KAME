prefix=/usr/local
exec_prefix=${prefix}
libdir=${exec_prefix}/lib
includedir=${prefix}/include

Name: ftgl
Description: OpenGL frontend to Freetype 2
Version: 2.0.5
Requires: 
Libs: -lGLU -L/System/Library/Frameworks/OpenGL.framework/Versions/A/Libraries -lGL -L/usr/X11/lib -lfreetype -lz -Wl,-framework,CoreServices,-framework,ApplicationServices -L${libdir} -lftgl
Cflags: -I${includedir} -I/usr/X11/include -I/usr/X11/include/freetype2 -I/usr/X11/include
